// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model WordRecord {
  id        Int      @id @default(autoincrement())
  word      String
  timeStamp Int
  dict      String
  chapter   Int?
  timing    Int[]
  wrongCount Int
  mistakes  Json     // Will store LetterMistakes as JSON
  chapterRecord ChapterRecord? @relation(fields: [chapterRecordId], references: [id])
  chapterRecordId Int?

  @@index([dict, chapter])
}

model ChapterRecord {
  id        Int      @id @default(autoincrement())
  dict      String
  chapter   Int?
  timeStamp Int
  time      Int
  correctCount Int
  wrongCount   Int
  wordCount    Int
  correctWordIndexes Int[]
  wordNumber   Int
  wordRecords  WordRecord[]
  
  @@index([dict, chapter])
}

model ReviewRecord {
  id        Int      @id @default(autoincrement())
  dict      String
  index     Int      @default(0)
  createTime Int
  isFinished Boolean @default(false)
  words     Json     // Will store Word[] as JSON
}

model RevisionDictRecord {
  id            Int      @id @default(autoincrement())
  dict          String
  revisionIndex Int
  createdTime   Int
}

model RevisionWordRecord {
  id          Int      @id @default(autoincrement())
  word        String
  timeStamp   Int
  dict        String
  errorCount  Int
}
